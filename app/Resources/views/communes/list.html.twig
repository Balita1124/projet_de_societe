{% extends 'base.html.twig' %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Liste des communes(Toutes)</h4>
                            <p class="card-description">
                                <a href="{{ path('create_commune') }}" class="btn btn-success pull-left"><span
                                            class="fa fa-plus"></span>
                                    Ajouter une commune
                                </a>
                            </p>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>District</th>
                                    <th>RÃ©gion</th>
                                    <th class="text-center">#</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commune in communes %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('show_commune', { 'commune': commune.id }) }}">{{ commune.name }}</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('show_district', { 'district': commune.district.id }) }}">{{ commune.district.name }}</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('show_region', { 'region': commune.district.region.id }) }}">{{ commune.district.region.name }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class='btn btn-primary btn-xs'
                                               href="{{ path('edit_commune', { 'commune': commune.id }) }}"><span
                                                        class="fa fa-pencil-square-o"></span> Modifier</a>
                                            <a href="{{ path('delete_commune', { 'commune': commune.id }) }}"
                                               class="btn btn-danger btn-xs"><span
                                                        class="fa fa-remove"> Supprimer</span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}