{% extends 'auth.html.twig' %}
{#{% block title %}Login | Madagascar{% endblock %}#}
{% block body %}
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth login-full-bg">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-dark text-left p-5">
                            <h2>Se connecter</h2>
                            <h4 class="font-weight-light">Renseigner le mail et mot de passe</h4>

                            {#<form class="pt-5">#}
                            <form role="form" action="{{ path('security_login_check') }}" method="POST"
                                  class="pt-5">
                                {#<form>#}
                                {% if error %}
                                    <p class="text-danger">
                                        {{ error.messageKey|trans(error.messageData) }}
                                    </p>
                                {% endif %}
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email</label>
                                    <input type="email" name="_email" class="form-control" id="exampleInputEmail1"
                                           aria-describedby="emailHelp" placeholder="Email">
                                    <i class="mdi mdi-account"></i>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mot de passe</label>
                                    <input type="password" name="_password" class="form-control"
                                           id="exampleInputPassword1"
                                           placeholder="Mot de passe">
                                    <i class="mdi mdi-eye"></i>
                                </div>
                                <div class="mt-5">
                                    {#<a class="btn btn-block btn-warning btn-lg font-weight-medium"#}
                                    {#href="../../index.html">Login</a>#}
                                    <input type="submit" name="loginSubmit"
                                           class="btn btn-block btn-warning btn-lg font-weight-medium"
                                           value="Se connecter"/>
                                </div>
                                {#<div class="mt-3 text-center">#}
                                    {#<a href="#" class="auth-link text-white">Forgot password?</a>#}
                                {#</div>#}
                                {#</form>#}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}