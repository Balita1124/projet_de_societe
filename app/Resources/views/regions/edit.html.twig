{% extends 'base.html.twig' %}
{% block title %}Region | Madagascar{% endblock %}
{% block body %}
    <div class="row">
    <div id="formulaire" class="col-md-6 col-md-offset-3">
    <div class="well well-sm">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <fieldset>
            <legend class="text-center">Modifier une region</legend>

            <div class="form-group">
                <label class="col-md-3 control-label" for="name">Name</label>
                <div class="col-md-9">
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="capital">Capitale</label>
                <div class="col-md-9">
                    {{ form_widget(form.capital, { 'attr': {'class': 'form-control', 'placeholder': 'Capitale'} }) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="capital">Slogan</label>
                <div class="col-md-9">
                    {{ form_widget(form.slogan, { 'attr': {'class': 'form-control', 'placeholder': 'slogan'} }) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="capital">Province</label>
                <div class="col-md-9">
                    {{ form_widget(form.province, { 'attr': {'class': 'form-control', 'placeholder': 'Province'} }) }}
                </div>
            </div>
            <!-- Form actions -->
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary btn-lg">Enregistrer</button>
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}
    </div>
{% endblock %}