{% extends 'base.html.twig' %}
{% block title %}Region | Madagascar{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6 d-flex align-items-stretch grid-margin">
                    <div class="row flex-grow">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Modifier une region</h4>

                                    <p class="card-description">
                                    </p>
                                    {{ form_start(form, { 'attr': {'class': 'forms-sample'} }) }}
                                    <div class="form-group">
                                        <label for="name">Nom</label>
                                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="capital">Capitale</label>
                                        {{ form_widget(form.capital, { 'attr': {'class': 'form-control', 'placeholder': 'Capitale'} }) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="slogan">Slogan</label>
                                        {{ form_widget(form.slogan, { 'attr': {'class': 'form-control', 'placeholder': 'Slogan'} }) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="province">Province</label>
                                        {{ form_widget(form.province, { 'attr': {'class': 'form-control', 'placeholder': 'Province'} }) }}
                                    </div>

                                    <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
                                    {{ form_end(form) }}
                                    <a href="{{ path('list_region') }}" class="btn btn-default pull-left"><span
                                                class="fa fa-arrow-left"></span>
                                        Annuler</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}