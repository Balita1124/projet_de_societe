{% extends 'base.html.twig' %}
{% block title %}Region | Madagascar{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-center display-4 text-primary"><span class="fa fa-home"></span>
                                Region de {{ region.name }}
                            </h4>

                            <p class="card-description text-center display-5">
                                <span>Capitale  : {{ region.capital }}</span><br>
                                <span>Slogan  : {{ region.slogan }}</span><br>
                                <span>Province  : <a
                                            href="{{ path('show_province', { 'province': region.province.id }) }}">{{ region.province.name }}</a></span>
                            </p>
                            <a href="{{ path('list_region') }}" class="btn btn-default pull-left"><span
                                        class="fa fa-arrow-left"></span>
                                Retour</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-primary"><u>Districts dans la region</u></h4>

                            <p class="card-description text-center display-5">
                            </p>
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Region</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for district in region.districts %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('show_district', { 'district': district.id }) }}">{{ district.name }}</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('show_region', { 'region': district.region.id }) }}">{{ district.region.name }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
