{% extends 'base.html.twig' %}
{% block title %}Region | Madagascar{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Region de {{ region.name }}</h1>

            <span>Capitale  : {{ region.capital }}</span><br>
            <span>Slogan  : {{ region.slogan }}</span><br>
            <span>Province  : <a href="{{ path('show_province', { 'province': region.province.id }) }}">{{ region.province.name }}</a></span>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="row col-md-6 col-md-offset-2 custyle">
                    <h3 style="text-decoration: underline">Districts dans le province</h3>
                    <table class="table table-striped custab">
                        <thead>
                        {#<a href="{{ path('create_district') }}" class="btn btn-primary btn-xs pull-left"><b>+</b> Ajouter un#}
                            {#district</a>#}
                        <tr>
                            {#<th>id</th>#}
                            <th>Nom</th>
                            <th>Region</th>
                            {#<th class="text-center">Action</th>#}
                        </tr>
                        </thead>
                        <tbody>
                        {% for district in region.districts %}
                            <tr>
                                {#<td>{{ district.id }}</td>#}
                                <td><a href="{{ path('show_district', { 'district': district.id }) }}">{{ district.name }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('show_region', { 'region': district.region.id }) }}">{{ district.region.name }}</a>
                                </td>
                                {#<td class="text-center">#}
                                    {#<a class='btn btn-info btn-xs'#}
                                       {#href="{{ path('edit_district', { 'district': district.id }) }}"><span#}
                                                {#class="fa fa-edit"></span></a>#}
                                    {#<a href="{{ path('delete_district', { 'district': district.id }) }}"#}
                                       {#class="btn btn-danger btn-xs"><span#}
                                                {#class="fa fa-remove"></span></a>#}
                                {#</td>#}
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            {% if region.promesses != null %}
                <div class="row">
                    <div class="row col-md-6 col-md-offset-2 custyle">
                        <table class="table table-striped custab">
                            <thead>
                            {#<a href="{{ path('create_promesse') }}" class="btn btn-primary btn-xs pull-left"><b>+</b> Ajouter une#}
                            {#promesse</a>#}
                            <h3 style="text-decoration: underline">Promesses presidentielles dans la region</h3>
                            <tr>
                                <th>Nom</th>
                                <th>Description</th>
                                {#<th>Date</th>#}
                                <th>Province</th>
                                <th>Region</th>
                                <th>District</th>
                                {#<th class="text-center">Action</th>#}
                            </tr>
                            </thead>
                            <tbody>
                            {% for promesse in region.promesses %}
                                <tr>
                                    <td>{{ promesse.name }}</td>
                                    <td>{{ promesse.description }}</td>
                                    {#<td>{{ promesse.date }}</td>#}
                                    <td>
                                        <a href="{{ path('show_province', { 'province': promesse.province.id }) }}">{{ promesse.province.name }}</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('show_region', { 'region': promesse.region.id }) }}">{{ promesse.region.name }}</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('show_district', { 'district': promesse.district.id }) }}">{{ promesse.district.name }}</a>
                                    </td>
                                    {#<td class="text-center">#}
                                    {#<a class='btn btn-info btn-xs'#}
                                    {#href="{{ path('edit_promesse', { 'promesse': promesse.id }) }}"><span#}
                                    {#class="fa fa-edit"></span></a>#}
                                    {#<a href="{{ path('delete_promesse', { 'promesse': promesse.id }) }}"#}
                                    {#class="btn btn-danger btn-xs"><span#}
                                    {#class="fa fa-remove"></span></a>#}
                                    {#</td>#}
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}