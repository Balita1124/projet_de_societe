{% extends 'base.html.twig' %}
{% block title %}Province | Madagascar{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-center display-4 text-primary"><span class="fa fa-home"></span>
                                Province
                                de {{ province.name }}</h4>

                            <p class="card-description text-center display-5">
                                Code postal : {{ province.zipCode }}
                            </p>
                            <a href="{{ path('list_province') }}" class="btn btn-default pull-left"><span
                                        class="fa fa-arrow-left"></span>
                                Liste des provinces</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-primary"><u>Regions dans le province</u></h4>

                            <p class="card-description text-center display-5">
                            </p>
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Capital</th>
                                    <th>Slogan</th>
                                    <th>Province</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for region in province.regions %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('show_region', { 'region': region.id }) }}">{{ region.name }}</a>
                                        </td>
                                        <td>{{ region.capital }}</td>
                                        <td>{{ region.slogan }}</td>
                                        <td>{{ region.province.name }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
