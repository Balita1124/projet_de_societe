{% extends 'base.html.twig' %}
{% block title %}Province | Madagascar{% endblock %}
{% block body %}
    <h1 class="entete-title">Liste des provinces</h1>

    <div class="row">
        <div class="row col-md-6 col-md-offset-2 custyle">
            <table class="table table-striped custab">
                <thead>
                <a href="{{ path('create_province')}}" class="btn btn-primary btn-xs pull-left"><b>+</b> Ajouter un province</a>
                <tr>
                    {#<th>id</th>#}
                    <th>Nom</th>
                    <th>Code postal</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                {% for province in provinces %}
                    <tr>
                        {#<td>{{ province.id }}</td>#}
                        <td><a href="{{ path('show_province', { 'province': province.id }) }}">{{ province.name }}</a>
                        </td>
                        <td>{{ province.zipCode }}</td>
                        <td class="text-center">
                            <a class='btn btn-info btn-xs'
                               href="{{ path('edit_province', { 'province': province.id }) }}"><span
                                        class="fa fa-edit"></span></a>
                            <a href="{{ path('delete_province', { 'province': province.id }) }}"
                               class="btn btn-danger btn-xs"><span
                                        class="fa fa-remove"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}