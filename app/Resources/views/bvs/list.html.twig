{% extends 'base.html.twig' %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Liste des BV</h4>

                            <p class="card-description">
                                <a href="{{ path('create_bv') }}" class="btn btn-success pull-left"><span
                                        class="fa fa-plus"></span>
                                    Ajouter un BV</a>
                            </p>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>BV</th>
                                        <th>Code BV</th>
                                        <th>Fokontany</th>
{#                                        <th>Commune</th>#}
                                        <th>Inscrits</th>
                                        <th>Votants</th>
                                        <th>Numero12</th>
                                        <th>Numero13</th>
                                        <th>Numero25</th>
                                        <th class="text-center">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for bv in bvs %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('show_bv', { 'bv': bv.id }) }}">{{ bv.name }}</a>
                                            </td>
                                            <td>{{ bv.code }}</td>
                                            <td>
                                                <a href="{{ path('show_fokontany', { 'fokontany': bv.fokontany.id }) }}">{{ bv.fokontany.name }}</a>
                                            </td>
                                            {#<td>
                                                <a href="{{ path('show_commune', { 'commune': bv.fokontany.commune.id }) }}">{{ bv.fokontany.commune.name }}</a>
                                            </td>#}
                                            <td>{{ bv.electeurs }}</td>
                                            <td>{{ bv.votants }}</td>
                                            <td>{{ bv.voix12 * 100 / bv.votants }} %</td>
                                            <td>{{ bv.voix13 * 100 / bv.votants }} %</td>
                                            <td>{{ bv.voix25 * 100 / bv.votants }} %</td>
                                            <td class="text-center">
                                                <a class='btn btn-primary btn-xs'
                                                   href="{{ path('edit_bv', { 'bv': bv.id }) }}"><span
                                                        class="fa fa-pencil-square-o"></span> Modifier</a>
                                                <a href="{{ path('delete_bv', { 'bv': bv.id }) }}"
                                                   class="btn btn-danger btn-xs"><span
                                                        class="fa fa-remove"> Supprimer</span></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}